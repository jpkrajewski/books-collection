<%- include('partials/header.ejs'); -%>

<!-- Add Book Form -->
<main class="container mt-5">
    <h1 class="mb-4">Add a New Book</h1>
    <form action="/add-book" method="POST">
      <div class="mb-3">
        <label for="isbn" class="form-label">ISBN (13 characters)</label>
        <input type="text" class="form-control" id="isbn" name="isbn" maxlength="13" required>
      </div>

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" maxlength="255" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
      </div>

      <div class="mb-3">
        <label for="rating" class="form-label">Rating (out of 5)</label>
        <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" step="0.1" required>
      </div>

      <!-- Hidden field to capture the current timestamp -->
      <input type="hidden" name="updated_at" value="<%= new Date().toISOString() %>">

      <button type="submit" class="btn btn-primary">Add Book</button>
    </form>
  </main>

<%- include('partials/footer.ejs'); -%>